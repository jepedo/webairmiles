<bean id="messageSource" class="ca.rsagroup.web.util.DatabaseDrivenMessageSource">	    
    	<property name="bundleName" value="Quote" />
    	<property name="tableName" value="resource_bundles" />
    	<property name="cacheSeconds" value="36"/>
    	<property name="dataSource" ref="dataSourceResourceBundles"/> 
	</bean>
