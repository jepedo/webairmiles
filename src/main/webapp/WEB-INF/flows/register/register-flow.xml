<?xml version="1.0" encoding="UTF-8"?>

<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract">
	<!-- note: this flow inherits from the 'abstract' flow -->
	 <persistence-context /> 
	<var name="airmilesRequest" class="ca.rsagroup.airmiles.AirmilesRequest" />
	<var name="flowScope.resp" class="ca.rsagroup.model.ValidResponses"/>
	<on-start>
		<set name = "flowScope.lang" value="requestParameters.lang" />	
		<evaluate expression="airmilesController.getDomain()" result="flowScope.domain" result-type="java.lang.String"/>
		<evaluate expression="airmilesRequest.setEmailConsent(true)" />
		<evaluate expression="persistenceContext.clear()" />
	</on-start>
	<!-- <var name="claim" class="ca.rsagroup.domain.Claim" />
	<on-start>
		<set name="flowScope.flowLevel2" value="1"></set>
		<set name = "flowScope.fi" value="requestParameters.fi" type="java.lang.Integer"/>
		<set name = "flowScope.lang" value="requestParameters.lang" />		
		<evaluate expression="lookupManager.getDomainId(flowScope.fi,flowScope.lang)" result="flowScope.domainId" result-type="java.lang.Integer"/>
		<evaluate expression="claimController.setLanguage(flowScope.lang,flowScope.domainId)"/>
		<set name = "flowScope.domainId" value="6" type="java.lang.Integer"/
	</on-start>
 -->
	<view-state id="start" view="airmiles.xhtml" model="airmilesRequest">

		<transition on="next" to="start" validate="true">
			<evaluate expression="airmilesController.processRequest(airmilesRequest, false,flowScope.resp)" result="flowScope.resp"></evaluate>
		</transition>
		<transition on="nextAgain" to="start" validate="true">
			<evaluate expression="airmilesController.processRequest(airmilesRequest, true,flowScope.resp)" result="flowScope.resp"></evaluate>		
		</transition>
	</view-state>
	

	<end-state id="end" view="externalRedirect:servletRelative:/" >
		<output name="claimSubmitted" value="claim" />
	</end-state>

</flow>